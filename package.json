{
  "name": "site-agent",
  "version": "0.1.0",
  "description": "Turn any website or domain into a Claude-powered Q&A agent",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf packages/*/dist examples/*/dist node_modules packages/*/node_modules examples/*/node_modules"
  },
  "keywords": [
    "claude",
    "ai",
    "agent",
    "website",
    "site-agent",
    "qa",
    "chatbot",
    "sse"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.6.2",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  }
}
